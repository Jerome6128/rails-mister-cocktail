<h1><%= @cocktail.name %> - Doses</h1>
<%#= cl_image_tag(@cocktail.photo.key, width: 400, height: 300, crop: :fill) %>
<h2><%= link_to 'Create a new dose', new_cocktail_dose_path(@cocktail) %></h2>

<ul>
  <%#= raise %>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to "Remove",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>
